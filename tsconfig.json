{
  "compilerOptions": {
    "target": "EsNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@core/*": ["src/core/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "ts-node": {
    "swc": true
  },
  "exclude": [
    "dist"
  ]
}
