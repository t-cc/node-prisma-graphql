{
  "name": "prisma-fastify-boilerplate",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "swc src --out-dir dist",
    "create-super-user": "pnpm build >> /dev/null 2>&1  && node dist/src/modules/auth/cli/create-super-user.js",
    "hash-password": "pnpm build >> /dev/null 2>&1  && node dist/src/modules/auth/cli/hash-password.js",
    "dev": "nodemon --watch src --ext ts --exec 'pnpm build && pnpm start'",
    "gen": "prisma generate",
    "lint": "eslint src --ignore-pattern 'src/generated/**' --fix",
    "migrate": "prisma migrate dev --schema prisma/schema.prisma",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "start": "env-cmd -f .env.local node dist/src/index.js",
    "start:prod": "prisma migrate deploy && node dist/src/index.js",
    "tsc": "tsc"
  },
  "dependencies": {
    "@adminjs/prisma": "^5.0.3",
    "@apollo/server": "^4.11.0",
    "@prisma/client": "^5.19.1",
    "@types/graphql-fields": "^1.3.9",
    "adminjs": "^7.8.12",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.13.0",
    "cookie": "^0.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "graphql": "^16.9.0",
    "graphql-fields": "^2.0.3",
    "graphql-scalars": "^1.23.0",
    "jsonwebtoken": "^9.0.2",
    "reflect-metadata": "^0.2.2",
    "tslib": "^2.7.0",
    "type-graphql": "2.0.0-rc.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@swc/cli": "0.4.1-nightly.20240914",
    "@swc/core": "^1.7.26",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.4",
    "env-cmd": "^10.1.0",
    "eslint": "^9.10.0",
    "globals": "^15.9.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "prisma": "^5.19.1",
    "typegraphql-prisma": "^0.28.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.5.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "importOrder": ["^[a-z]", "^\\@|\\$|\\#", "^."],
    "importOrderParserPlugins": ["typescript", "decorators-legacy"],
    "importOrderSeparation": true
  },
  "private": true
}
